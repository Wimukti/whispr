    <!--    </com.google.android.material.appbar.AppBarLayout>-->

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dip"
        android:text="Type Your Message"
        android:textAlignment="textStart"
        android:textColor="#7B13C2"
        android:textSize="24sp"
        android:textStyle="normal" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:hint="Your message">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4D7A0FC0"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:textSize="20sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/send_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:height="70dip"
        android:hapticFeedbackEnabled="true"
        android:text="Send Message"
        android:textStyle="italic"
        app:backgroundTint="#7B13C3"
        app:cornerRadius="30dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="40dip"
        android:layout_marginBottom="40dip"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dip"
        android:text="Adjust Transmission Rate"
        android:textAlignment="textStart"
        android:textColor="#7B13C2"
        android:textSize="24sp"
        android:textStyle="normal" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="20dip"
        android:layout_marginRight="20dip"
        android:max="100"
        android:progressBackgroundTint="#887B13C2"
        android:progressTint="#7B13C2"
        android:thumb="@drawable/seekbar_thumb"/>

    <TextView
        android:id="@+id/transmission_rate"
        android:layout_width="262dp"
        android:layout_height="28dp"
        android:layout_marginTop="10dip"
        android:background="#00FFFFFF"
        android:paddingStart="20dip"
        android:text="Transmission Rate: 50ms"
        android:textColor="#7B13C2"
        android:textSize="20sp"
        android:textStyle="normal|italic" />

</LinearLayout>